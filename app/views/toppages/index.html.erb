<% if logged_in? %>

<%= render "rankings/favorite", favorites: @favorites %><br>

<h3>フォローしたユーザーと自分の投稿</h3>
  <% @followings_users_posts.each do |followings_users_post| %>
    <% if followings_users_post.image.url.present? %>
      <%= link_to (image_tag followings_users_post.image.url), user_path(followings_users_post [:user_id] ) %>
    <% else %>
      <%= link_to (image_tag "nelco_post.jpg"), user_path(followings_users_post [:user_id] ) %>
    <% end %>
  <% end %>

  <%= paginate @nelcopost_pages %>

<% else %>
  <% content_for :cover do %>
    <div id="top-contents">
        <video id="bg-video" src="/images/nelco-top-comp.mp4" poster="/images/nelco-top.jpg" autoplay loop></video>
        <h1>さぁ、<ruby>nelco<rt>ネルコ</rt></ruby>で<br>
            寝顔をシェアしよう</h1>
        <p>ペットの寝顔をシェアできるサービスです</p><br>
        <%= link_to "n e l c oを始める", signup_path, class: "btn btn-success" %>
        <br><br>
        <%= link_to "すべての投稿を見る", allposts_path, class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>