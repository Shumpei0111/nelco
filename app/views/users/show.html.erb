<div class="postform">
  <%= render "nelcoposts/form", nelcoposts: @nelcopost %>
</div>


<div class="row">
  <div class="col-ms-3">
    投稿したもの
    <% @nelcoposts.each do |nelcopost| %>
      <% if nelcopost.image.present? %>
        <%#= image.inspect %>
      <div class="image_posts">
        <div class="col-md-3">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
                <%= image_tag nelcopost.image.url %>
            </div>
            <div class="panel-body text-center">
              title: <%= nelcopost.title %><br>
              <!-- posted by: <%#= link_to @user.name, user_path %><br> -->
              <% if current_user == @nelcopost.user %>
              <%= link_to "Delete", nelcopost_path(nelcopost), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger btn-xs" %>
            <% end %>
            </div>
          </div>
        </div>
        
      <% else %>
      <div class="image_posts">
        <div class="col-md-3">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <%= image_tag nelco_post.jpg %>
              </div>
              <div class="panel-body text-center">
                title: <%= nelcopost.title %><br>
                <!-- posted by: <%#= link_to @user.name, user_path %><br> -->
                  <% if current_user == @nelcopost.user %>
                  <%= link_to "Delete", nelcopost_path(nelcopost), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger btn-xs" %>
                <% end %>
              </div>  
              <% end %>
            <% end %>
            </div>
          </div>
        </div>
     </div>
  </div>
</div>

<% end %>
<%= paginate @nelcoposts %>